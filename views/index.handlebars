<h1 class=>Burgers!</h1>

<div class="container" id="burger-holder">
<div class="row">
<div class="col-md-4">

<h2>EAT A BURGER</h2>
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

         <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="1">
          <button class="btn btn-default" type="submit">DEVOUR!</button>
        </form>
        
      </li>
    {{/unless}}  
  {{/each}}
</ul>
</div>

<div class="col-md-4" id="add">
<h2>Add a Burger</h2>

<form class="create-update-form" action="/" method="POST">
  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="bn" name="name">
  </div>

  <button type="submit" class="btn btn-default">Add Burger</button>
</form>
</div>

<div class="col-md-4" id="devoured">
<h2>Devoured Burgers</h2>
<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}
      </li>
    {{/if}}  
  {{/each}}
</ul>
</div>
</div>
</div>




